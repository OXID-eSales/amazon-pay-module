{% extends "order_overview.html.twig" %}

{% block admin_order_overview_checkout %}
    {{ parent() }}

    <div>isOneStepCapture: {{ isOneStepCapture }}</div>
    <div>isCaptured: {{ isCaptured }}</div>
    {% if oViewConf.isAmazonPaymentId(edit.oxorder__oxpaymenttype.value) %}
        <tr>
            <td class="edittext"><b>{{ translate({ ident: "OSC_AMAZONPAY_REMARK", suffix: "COLON" }) }}</b></td>
            <td class="edittext">{{ edit.oxorder__osc_amazon_remark.value }} {{ edit.oxorder__oxcurrency.value }}<br></td>
        </tr>
        {% if edit.oxorder__oxtransstatus.value == 'OK' and oViewConf.isAmazonActive() %}
            <tr>
                <td class="edittext">
                    {{ translate({ ident: "OSC_AMAZONPAY_REFUND_ANNOTATION" }) }}
                    {{ oViewConf.getMaximalRefundAmount(oxid) }}
                    {{ edit.oxorder__oxcurrency.value }}
                </td>
            </tr>
            <tr>
                <td>
                    <form name="refundpayment" id="refundpayment" action="{{ oViewConf.getSelfLink()|raw }}" >
                        {{ oViewConf.getHiddenSid()|raw }}
                        <input type="text" name="refundAmount" value="0" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" />
                        <input type="button" name="refundButton" value="{{ translate({ ident: "OSC_AMAZONPAY_REFUND" }) }}" onclick="document.refundpayment.submit()" />
                        <input type="hidden" name="oxid" value="{{ oxid }}">
                        <input type="hidden" name="cl" value="order_overview">
                        <input type="hidden" name="fnc" value="refundpayment">
                    </form>
                </td>
            </tr>
        {% endif %}
    {% endif %}
{% endblock %}

{% block admin_order_overview_send_form %}
    {% if oViewConf.isAmazonPaymentId(edit.oxorder__oxpaymenttype.value) %}
        <tr>
            {% if isOneStepCapture is same as('0') %}
                {% if isCaptured is same as('1') %}
                    <td colspan="2">{{ translate({ ident: "OSC_AMAZONPAY_PAYMENT_WAS_SHIPPING" }) }}</td>
                {% else %}
                    <td colspan="2">{{ translate({ ident: "OSC_AMAZONPAY_PAYMENT_WHEN_SHIPPING" }) }}</td>
                {% endif %}
            {% else %}
                {% if isCaptured is same as('1') %}
                    <td colspan="2">{{ translate({ ident: "OSC_AMAZONPAY_PAYMENT_DURING_CHECKOUT" }) }}</td>
                {% endif %}
            {% endif %}
        </tr>
    {% endif %}
{% endblock %}

{% block admin_order_overview_reset_form %}
    {{ parent() }}

    {% if oViewConf.isAmazonPaymentId(edit.oxorder__oxpaymenttype.value) %}

        </table>
        <br>
        <p><b>{{ translate({ ident: "OSC_AMAZONPAY_TRANSACTION_HISTORY" }) }}</b></p>
        <table style="width: 100%">

            <tr>
                <td style="width: 20%"><b>{{ translate({ ident: "OSC_AMAZONPAY_DATE", suffix: "COLON" }) }}</b></td>
                <td style="width: 30%"><b>{{ translate({ ident: "OSC_AMAZONPAY_REFERENCE", suffix: "COLON" }) }}</b></td>
                <td style="width: 50%"><b>{{ translate({ ident: "OSC_AMAZONPAY_RESULT", suffix: "COLON" }) }}</b></td>
            </tr>

            {% for logItem in orderLogs %}
                <tr>
                    <td class="edittext">{{ logItem.time }}</td>
                    <td class="edittext">{{ logItem.identifier }}</td>
                    <td class="edittext">{{ logItem.requestType }}</td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <p><b>{{ translate({ ident: "OSC_AMAZONPAY_IPN_HISTORY" }) }}</b></p>
        <table style="width: 100%">

        <tr>
            <td style="width: 20%"><b>{{ translate({ ident: "OSC_AMAZONPAY_DATE", sufix: "COLON" }) }}</b></td>
            <td style="width: 30%"><b>{{ translate({ ident: "OSC_AMAZONPAY_REFERENCE", sufix: "COLON" }) }}</b></td>
            <td style="width: 50%"><b>{{ translate({ ident: "OSC_AMAZONPAY_RESULT", sufix: "COLON" }) }}</b></td>
        </tr>

        {% for logItem in ipnLogs %}
            <tr>
                <td class="edittext">{{ logItem.time }}</td>
                <td class="edittext">{{ logItem.identifier }}</td>
                <td class="edittext">{{ logItem.requestType }}</td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}