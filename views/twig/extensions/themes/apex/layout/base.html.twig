{% extends "layout/base.html.twig" %}

{% block base_js %}
    {% if oViewConf.isAmazonActive() %}
        {{ parent() }}
        {{ script({ include: "https://static-eu.payments-amazon.com/checkout.js", priority: 1, dynamic: __oxid_include_dynamic }) }}
    {% endif %}
{% endblock %}

{% block base_style %}
    <!-- TODO  check why min is unavailable -->
