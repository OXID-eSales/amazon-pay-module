{% extends "page/checkout/payment.html.twig" %}

{% block change_payment %}
    {% if oViewConf.getAmazonPaymentId() in oView.getPaymentList()|keys and not oViewConf.isAmazonExclude() %}
        {% include '@osc_amazonpay/amazonpay/change_payment_block_apex' %}
    {% endif %}
    {% if not oViewConf.isAmazonSessionActive() or oViewConf.isAmazonExclude() %}
        {{ parent() }}
    {% elseif oViewConf.getAmazonPaymentId() in oView.getPaymentList()|keys %}
        {% include '@osc_amazonpay/amazonpay/change_payment_form_apex' %}
    {% endif %}
{% endblock %}

{% block select_payment %}
    {% if sPaymentID != oViewConf.getAmazonExpressPaymentId() %}
        {{ parent() }}
    {% endif %}
{% endblock %}